<h1>Listing stations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Codename</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stations.each do |station| %>
  <tr>
    <td><%= station.name %></td>
    <td><%= station.codename %></td>
    <td><%= link_to 'Show', station %></td>
    <td><%= link_to 'Edit', edit_station_path(station) %></td>
    <td><%= link_to 'Destroy', station, :confirm => 'Are you sure?', :method => :delete %></td>
	 <td><%= link_to 'Generate', station %></td>
  </tr>
<% end %>
</table>
         
<p>&nbsp;</p>

<%= form_for @newstation do |f| %>
	<%= f.label :name, "Full station name"%>
	<%= f.text_field :name, :autofocus => true %><br />
	<%= f.label :codename, "HTML codename" %>
	<%= f.text_field :codename %>
	<%= f.submit %>
<% end %>


<br />

<%= link_to 'New Station', new_station_path %>
